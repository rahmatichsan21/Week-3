public class Produk {
    private String namaProduk;
    private int harga;
    private int qty;

    public Produk(String namaProduk, int harga) {
        this.namaProduk = namaProduk;
        this.harga = harga;
        this.qty = 0;
    }

    public String getNamaProduk() {
        return namaProduk;
    }

    public int getHarga() {
        return harga;
    }

    public int getQty() {
        return qty;
    }

    public void tambahQty(int qty) {
        this.qty += qty;
    }

    public int getTotalHarga() {
        return harga * qty;
    }
}
